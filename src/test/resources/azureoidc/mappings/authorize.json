{
  "priority": 2,
  "request": {
    "method": "GET",
    "urlPattern": "/oauth2/v2.0/authorize?.*"
  },
  "response": {
    "transformers": [
      "response-template"
    ],
    "status": 302,
    "headers": {
      "Location": "http://localhost:8080/auth/login/oauth2/code/microsoft?code={{{request.query.nonce}}}&state={{{request.query.state}}}"
    }
  }
}
